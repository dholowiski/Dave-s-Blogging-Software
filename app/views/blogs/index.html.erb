<h1>Dave's Blog</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Summary</th>
    <th></th>
  </tr>

<% @blogs.each do |blog| %>
  <tr>
    <td><%= link_to blog.title, blog.to_param %></td>
    <td><%= blog.summary %></td>
    <td><% if user_signed_in? && current_user.id == blog.user_id%><%= link_to 'Edit', edit_blog_path(blog) %><% end %></td>
  </tr>
<% end %>
</table>

<br />

<% if user_signed_in? %><%= link_to 'New Blog', new_blog_path %><% end %>

<% if @categories %>
Categories
<ul>
<% @categories.each do |category| %>
<li><%= link_to category.name, :controller=> 'categories', :action=> 'show', :id=> category.to_param %> (<%= category.blogs.count.to_s %>)</li>
<% end %>
</ul>
<% end %>

<%= render 'layouts/footer' %>