<p id="notice"><%= notice %></p>

  <h1><%= @blog.title %></h1>

<p>
  <%= @blog.body.html_safe %>
</p>

<% if @blog.tags %>Tags: <% @blog.tags.each do |tag| %><%= tag.tag %> | <% end %><br/><% end %>
<% if @blog.categories %>Categories: <% @blog.categories.each do |category| %><%= category.name %> | <% end %><br/><% end %>


<% if user_signed_in? && current_user.id == @blog.user_id %><%= link_to 'Edit', edit_blog_path(@blog) %> | <% end %>
