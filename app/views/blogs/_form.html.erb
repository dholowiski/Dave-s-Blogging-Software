<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="draft_select">
  <%= select(:blog, :isdraft, options_for_select([['Published', 0], ['Draft', 1]]), {}, {:class=>"span2"}) %> <%= f.submit "Save Post" %>
</div>
  <div class="field">
    Post Title: <%= f.text_area :title, :rows=>1, :cols=>200,:class=>"span8" %>
  </div>
<div class="field">
    Comma seperated categories: <% if @categories %> Exisitng Categories: <% @categories.each do |category| %><%=category.name %> | <% end %><% end %>
    <%= text_field_tag(:categories) %>
  </div>
  <div class="field">
    Tags: <%= text_field_tag(:tags) %>
  </div>
  <div class="field">
    <%= f.label :summary %><br />
    <%= f.text_area :summary, :rows=>40, :cols=>"40" %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.number_field :user_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
