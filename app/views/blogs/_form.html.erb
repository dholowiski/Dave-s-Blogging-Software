<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<div class="field">
    Draft only: <%= f.check_box(:isdraft, options = {}, checked_value = "1", unchecked_value = "0") %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
<div class="field">
    Comma seperated categories:
    <%= text_field_tag(:categories) %>
    <% if @categories %> Exisitng Categories: <% @categories.each do |category| %><%=category.name %> | <% end %><% end %>
  </div>
  <div class="field">
    <%= f.label :tags %><br />
    <%= text_field_tag(:tags) %>
  </div>
  <div class="field">
    <%= f.label :summary %><br />
    <%= f.text_area :summary %>
  </div>
  <div class="field">
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </div>
  <div class="field">
    <%= f.label :user_id %><br />
    <%= f.number_field :user_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
