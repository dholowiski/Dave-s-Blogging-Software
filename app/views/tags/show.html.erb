<p id="notice"><%= notice %></p>

<p>
  <b>Tag:</b>
  <%= @tag.tag %>
</p>

<h1>Listing blogs</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Summary</th>
    <th>Body</th>
    <th>User</th>
    <th></th>
    <th></th>
  </tr>

<% @tag.blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.summary %></td>
    <td><%= blog.user_id %></td>
    <td><%= link_to 'Show', blog %></td>
    <td><% if user_signed_in? && current_user.id == blog.user_id%><%= link_to 'Edit', edit_blog_path(blog) %><% end %></td>
  </tr>
<% end %>
</table>

<br />

<% if user_signed_in? && current_user.is_admin == 1 %>
<%= link_to 'Edit', edit_tag_path(@tag) %> |
<% end %>
<%= link_to 'Back', tags_path %>

<%= render 'layouts/footer' %>
